{
  "name": "webpack-typescript",
  "version": "1.0.0",
  "description": "Fullstack Typescript App",
  "scripts": {
    "start": "npm run build:prod && npm run server:koa",
    "dev": "npm run build && concurrently 'npm run server:webpack' 'npm run server:koa'",
    "build": "npm run clean && webpack --env local",
    "build:prod": "npm run clean && webpack --env production",
    "server:koa": "nodemon --watch src/server/**/*.ts --exec ts-node src/server/main.ts",
    "server:webpack": "webpack-dev-server --hot --colors --env local",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.ts --exit",
    "clean": "rimraf public/*",
    "tslint": "tslint src/**/*.ts",
    "tslint:fix": "tslint src/**/*.ts --fix"
  },
  "author": "Eden Reich<eden.reich@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static": "^4.0.1",
    "@types/koa-webpack": "^5.0.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.1",
    "@types/webpack": "^4.4.31",
    "@types/webpack-dev-server": "^3.1.5",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^5.0.1",
    "mocha-webpack": "^1.1.0",
    "nodemon": "^1.19.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "ts-node": "^8.1.0"
  }
}
