{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es2015.promise", "dom.iterable", "esnext", "scripthost"],
    "outDir": "public",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": [ "src/client/*" ],
      "@server/*": [ "src/server/*" ],
      "@components/*": [ "src/client/components/*" ],
      "@interfaces/*": [ "src/client/interfaces/*" ],
      "@tests/*": [ "tests/*" ]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts"
  ]
}
